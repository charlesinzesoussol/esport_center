<section id="features" class="py-20 bg-dark-card">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
        Everything You Need for
        <span class="text-gaming-green">Gaming Streams</span>
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Discover, watch, and never miss your favorite esports content with powerful features designed for gamers.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Feature 1: Live Discovery -->
      <div class="bg-dark-bg rounded-2xl p-8 border border-dark-border hover:border-gaming-green/50 transition-all transform hover:scale-105 group">
        <div class="w-12 h-12 bg-gaming-green/20 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gaming-green/30 transition-colors">
          <svg class="w-6 h-6 text-gaming-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">Live Stream Discovery</h3>
        <p class="text-gray-300">
          Find live streams from your favorite games instantly. Browse by game, viewer count, or discover new streamers with our smart recommendations.
        </p>
      </div>
      
      <!-- Feature 2: Real-time Notifications -->
      <div class="bg-dark-bg rounded-2xl p-8 border border-dark-border hover:border-gaming-green/50 transition-all transform hover:scale-105 group">
        <div class="w-12 h-12 bg-gaming-green/20 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gaming-green/30 transition-colors">
          <svg class="w-6 h-6 text-gaming-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM12 17H7a3 3 0 01-3-3V8a3 3 0 013-3h10a3 3 0 013 3v4"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">Smart Notifications</h3>
        <p class="text-gray-300">
          Get notified when your favorite streamers go live. Never miss important tournaments or special events with customizable alerts.
        </p>
      </div>
      
      <!-- Feature 3: Search & Filter -->
      <div class="bg-dark-bg rounded-2xl p-8 border border-dark-border hover:border-gaming-green/50 transition-all transform hover:scale-105 group">
        <div class="w-12 h-12 bg-gaming-green/20 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gaming-green/30 transition-colors">
          <svg class="w-6 h-6 text-gaming-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">Advanced Search</h3>
        <p class="text-gray-300">
          Powerful search and filtering tools. Find streams by game, creator, language, viewer count, and more with lightning-fast results.
        </p>
      </div>
      
      <!-- Feature 4: Multiple Games -->
      <div class="bg-dark-bg rounded-2xl p-8 border border-dark-border hover:border-gaming-green/50 transition-all transform hover:scale-105 group">
        <div class="w-12 h-12 bg-gaming-green/20 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gaming-green/30 transition-colors">
          <svg class="w-6 h-6 text-gaming-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">Multi-Game Support</h3>
        <p class="text-gray-300">
          Support for all major esports titles: League of Legends, Valorant, CS2, Dota 2, Overwatch, and many more games.
        </p>
      </div>
      
      <!-- Feature 5: User Profiles -->
      <div class="bg-dark-bg rounded-2xl p-8 border border-dark-border hover:border-gaming-green/50 transition-all transform hover:scale-105 group">
        <div class="w-12 h-12 bg-gaming-green/20 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gaming-green/30 transition-colors">
          <svg class="w-6 h-6 text-gaming-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">Personal Profile</h3>
        <p class="text-gray-300">
          Create your gaming profile, follow your favorite streamers, and build your personalized watch list for easy access.
        </p>
      </div>
      
      <!-- Feature 6: Dark Mode -->
      <div class="bg-dark-bg rounded-2xl p-8 border border-dark-border hover:border-gaming-green/50 transition-all transform hover:scale-105 group">
        <div class="w-12 h-12 bg-gaming-green/20 rounded-lg flex items-center justify-center mb-6 group-hover:bg-gaming-green/30 transition-colors">
          <svg class="w-6 h-6 text-gaming-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">Gaming UI</h3>
        <p class="text-gray-300">
          Dark theme optimized for gaming sessions. Reduced eye strain during long viewing sessions with carefully crafted colors.
        </p>
      </div>
    </div>
    
    <!-- CTA Section -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-gaming-green/20 to-gaming-blue/20 rounded-2xl p-8 border border-gaming-green/30">
        <h3 class="text-2xl font-bold text-white mb-4">Ready to Level Up Your Streaming Experience?</h3>
        <p class="text-gray-300 mb-6">Join thousands of gamers who never miss their favorite content.</p>
        <a href="#download" class="bg-gaming-green text-dark-bg px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gaming-green/90 transition-all transform hover:scale-105 inline-block">
          Download EsportsStream
        </a>
      </div>
    </div>
  </div>
</section>