---
---

<!-- Ultra-realistic iPhone 15 Pro Max Mockup with accurate proportions -->
<div class="relative flex justify-center items-center">
  <!-- Phone Container with Professional Shadow -->
  <div class="relative">
    <!-- SVG iPhone Frame with Accurate iPhone 15 Pro Max Dimensions -->
    <svg 
      width="300" 
      height="610" 
      viewBox="0 0 300 610" 
      fill="none" 
      xmlns="http://www.w3.org/2000/svg"
      class="drop-shadow-[0_35px_80px_rgba(0,0,0,0.25)]"
    >
      <!-- Phone Body with Natural Titanium Look -->
      <rect 
        x="0" 
        y="0" 
        width="300" 
        height="610" 
        rx="58" 
        ry="58" 
        fill="url(#naturalTitaniumGradient)"
        stroke="url(#titaniumBorder)"
        stroke-width="0.5"
      />
      
      <!-- Inner Frame -->
      <rect 
        x="3" 
        y="3" 
        width="294" 
        height="604" 
        rx="55" 
        ry="55" 
        fill="url(#innerFrameGradient)"
        stroke="rgba(255,255,255,0.05)"
        stroke-width="0.5"
      />
      
      <!-- Screen Bezel -->
      <rect 
        x="8" 
        y="8" 
        width="284" 
        height="594" 
        rx="50" 
        ry="50" 
        fill="#000000"
        stroke="rgba(255,255,255,0.08)"
        stroke-width="0.3"
      />
      
      <!-- Screen -->
      <rect 
        x="12" 
        y="12" 
        width="276" 
        height="586" 
        rx="46" 
        ry="46" 
        fill="#0a0a0a"
      />
      
      <!-- Dynamic Island with realistic depth -->
      <ellipse 
        cx="150" 
        cy="32" 
        rx="44" 
        ry="16" 
        fill="#000000"
        filter="url(#dynamicIslandShadow)"
      />
      
      <!-- Camera System -->
      <g id="cameraSystem">
        <!-- Camera Bump -->
        <rect x="20" y="20" width="92" height="92" rx="24" fill="url(#cameraModuleGradient)" stroke="rgba(255,255,255,0.05)" stroke-width="0.5" />
        
        <!-- Main Camera -->
        <circle cx="46" cy="46" r="16" fill="url(#cameraLensGradient)" />
        <circle cx="46" cy="46" r="12" fill="url(#lensReflection)" />
        <circle cx="46" cy="46" r="8" fill="url(#lensCenter)" />
        
        <!-- Ultra Wide Camera -->
        <circle cx="86" cy="46" r="16" fill="url(#cameraLensGradient)" />
        <circle cx="86" cy="46" r="12" fill="url(#lensReflection)" />
        <circle cx="86" cy="46" r="8" fill="url(#lensCenter)" />
        
        <!-- Telephoto Camera -->
        <circle cx="66" cy="86" r="16" fill="url(#cameraLensGradient)" />
        <circle cx="66" cy="86" r="12" fill="url(#lensReflection)" />
        <circle cx="66" cy="86" r="8" fill="url(#lensCenter)" />
        
        <!-- Flash & LiDAR -->
        <circle cx="92" cy="72" r="6" fill="#ffffff" opacity="0.95" />
        <circle cx="92" cy="86" r="4" fill="url(#lidarGradient)" />
      </g>
      
      <!-- Side Buttons with Realistic Detail -->
      <!-- Volume Up -->
      <rect x="-3" y="130" width="6" height="32" rx="3" fill="url(#buttonTitaniumGradient)" stroke="rgba(0,0,0,0.1)" stroke-width="0.2" />
      <!-- Volume Down -->
      <rect x="-3" y="175" width="6" height="32" rx="3" fill="url(#buttonTitaniumGradient)" stroke="rgba(0,0,0,0.1)" stroke-width="0.2" />
      <!-- Action Button -->
      <rect x="-3" y="220" width="6" height="24" rx="3" fill="url(#actionButtonGradient)" stroke="rgba(0,0,0,0.1)" stroke-width="0.2" />
      
      <!-- Power Button -->
      <rect x="297" y="220" width="6" height="48" rx="3" fill="url(#buttonTitaniumGradient)" stroke="rgba(0,0,0,0.1)" stroke-width="0.2" />
      
      <!-- Lightning/USB-C Port -->
      <rect x="135" y="607" width="30" height="3" rx="1.5" fill="rgba(255,255,255,0.1)" />
      
      <!-- Speaker Grilles -->
      <!-- Left Speaker -->
      <g id="leftSpeaker">
        <circle cx="60" cy="608" r="1" fill="rgba(255,255,255,0.1)" />
        <circle cx="70" cy="608" r="1" fill="rgba(255,255,255,0.1)" />
        <circle cx="80" cy="608" r="1" fill="rgba(255,255,255,0.1)" />
      </g>
      
      <!-- Right Speaker -->
      <g id="rightSpeaker">
        <circle cx="220" cy="608" r="1" fill="rgba(255,255,255,0.1)" />
        <circle cx="230" cy="608" r="1" fill="rgba(255,255,255,0.1)" />
        <circle cx="240" cy="608" r="1" fill="rgba(255,255,255,0.1)" />
      </g>
      
      <!-- Gradients and Effects -->
      <defs>
        <!-- Natural Titanium Gradient -->
        <linearGradient id="naturalTitaniumGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#fafafa;stop-opacity:1" />
          <stop offset="25%" style="stop-color:#ffffff;stop-opacity:1" />
          <stop offset="50%" style="stop-color:#f8f9fa;stop-opacity:1" />
          <stop offset="75%" style="stop-color:#f1f3f4;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#e8eaed;stop-opacity:1" />
        </linearGradient>
        
        <!-- Titanium Border -->
        <linearGradient id="titaniumBorder" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#dadce0;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#bdc1c6;stop-opacity:1" />
        </linearGradient>
        
        <!-- Inner Frame Gradient -->
        <linearGradient id="innerFrameGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#f8f9fa;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#e8eaed;stop-opacity:1" />
        </linearGradient>
        
        <!-- Button Titanium Gradient -->
        <linearGradient id="buttonTitaniumGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#f1f3f4;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#dadce0;stop-opacity:1" />
        </linearGradient>
        
        <!-- Action Button Gradient -->
        <linearGradient id="actionButtonGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#ff6b35;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#d84315;stop-opacity:1" />
        </linearGradient>
        
        <!-- Camera Module Gradient -->
        <linearGradient id="cameraModuleGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#3c4043;stop-opacity:1" />
          <stop offset="50%" style="stop-color:#202124;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#1a1a1a;stop-opacity:1" />
        </linearGradient>
        
        <!-- Camera Lens Gradient -->
        <radialGradient id="cameraLensGradient" cx="50%" cy="50%" r="50%">
          <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
          <stop offset="70%" style="stop-color:#1a1a1a;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
        </radialGradient>
        
        <!-- Lens Reflection -->
        <radialGradient id="lensReflection" cx="30%" cy="30%" r="60%">
          <stop offset="0%" style="stop-color:#4a90e2;stop-opacity:0.6" />
          <stop offset="40%" style="stop-color:#2c5aa0;stop-opacity:0.4" />
          <stop offset="100%" style="stop-color:#1a1a1a;stop-opacity:1" />
        </radialGradient>
        
        <!-- Lens Center -->
        <radialGradient id="lensCenter" cx="50%" cy="50%" r="50%">
          <stop offset="0%" style="stop-color:#000000;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#1a1a1a;stop-opacity:1" />
        </radialGradient>
        
        <!-- LiDAR Gradient -->
        <radialGradient id="lidarGradient" cx="50%" cy="50%" r="50%">
          <stop offset="0%" style="stop-color:#2c2c2c;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
        </radialGradient>
        
        <!-- Dynamic Island Shadow -->
        <filter id="dynamicIslandShadow">
          <feDropShadow dx="0" dy="1" stdDeviation="1" flood-color="rgba(0,0,0,0.3)"/>
        </filter>
        
        <!-- Screen Glow Effect -->
        <filter id="screenGlow">
          <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
          <feMerge> 
            <feMergeNode in="coloredBlur"/>
            <feMergeNode in="SourceGraphic"/>
          </feMerge>
        </filter>
      </defs>
    </svg>
    
    <!-- Screen Content Overlay -->
    <div class="absolute top-3 left-3 w-[276px] h-[586px] rounded-[46px] overflow-hidden bg-dark-bg">
      <!-- Status Bar -->
      <div class="flex justify-between items-center px-8 py-4 text-white text-sm font-medium">
        <span>9:41</span>
        <div class="flex items-center space-x-2">
          <!-- Signal bars -->
          <div class="flex space-x-0.5">
            <div class="w-1 h-3 bg-white rounded-full"></div>
            <div class="w-1 h-3 bg-white rounded-full"></div>
            <div class="w-1 h-3 bg-white rounded-full"></div>
            <div class="w-1 h-3 bg-white/60 rounded-full"></div>
          </div>
          <!-- WiFi -->
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M1 9l2 2c4.97-4.97 13.03-4.97 18 0l2-2C16.93 2.93 7.07 2.93 1 9zm8 8l3 3 3-3c-1.65-1.65-4.34-1.65-6 0zm-4-4l2 2c2.76-2.76 7.24-2.76 10 0l2-2C15.14 9.14 8.87 9.14 5 13z"/>
          </svg>
          <!-- Battery -->
          <div class="flex items-center">
            <div class="w-6 h-3 border border-white rounded-sm relative">
              <div class="w-4 h-1.5 bg-gaming-green rounded-sm absolute top-0.5 left-0.5"></div>
            </div>
            <div class="w-0.5 h-1.5 bg-white rounded-full ml-0.5"></div>
          </div>
        </div>
      </div>
      
      <!-- App Header -->
      <div class="px-8 py-5 border-b border-dark-border">
        <div class="flex items-center justify-center">
          <div class="w-7 h-7 bg-gaming-green rounded-xl flex items-center justify-center mr-3 shadow-lg shadow-gaming-green/30">
            <span class="text-dark-bg font-bold text-lg">ES</span>
          </div>
          <span class="text-white font-semibold text-xl">EsportsStream</span>
        </div>
      </div>
      
      <!-- Search Bar -->
      <div class="px-8 py-5">
        <div class="bg-dark-card rounded-2xl p-5 border border-dark-border shadow-inner">
          <div class="flex items-center space-x-4 text-gray-400">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <span class="text-base">Search streams, games, creators...</span>
          </div>
        </div>
      </div>
      
      <!-- Live Streams -->
      <div class="px-8 space-y-5">
        <!-- Stream 1 - League of Legends -->
        <div class="bg-dark-card rounded-2xl overflow-hidden border border-dark-border shadow-lg">
          <div class="h-28 bg-gradient-to-br from-purple-600 via-blue-600 to-purple-700 relative">
            <div class="absolute top-3 left-3 bg-red-500 text-white text-sm px-3 py-1.5 rounded-lg font-bold">
              LIVE
            </div>
            <div class="absolute bottom-3 right-3 bg-black/60 backdrop-blur-sm text-white text-sm px-3 py-1.5 rounded-lg font-medium">
              2.5K viewers
            </div>
          </div>
          <div class="p-4">
            <h3 class="text-white font-semibold text-base mb-2">Ranked Climbing to Diamond</h3>
            <p class="text-gray-400 text-sm">League of Legends • ProGamer_2024</p>
          </div>
        </div>
        
        <!-- Stream 2 - Valorant -->
        <div class="bg-dark-card rounded-2xl overflow-hidden border border-dark-border shadow-lg">
          <div class="h-28 bg-gradient-to-br from-green-600 via-teal-600 to-gaming-green relative">
            <div class="absolute top-3 left-3 bg-red-500 text-white text-sm px-3 py-1.5 rounded-lg font-bold">
              LIVE
            </div>
            <div class="absolute bottom-3 right-3 bg-black/60 backdrop-blur-sm text-white text-sm px-3 py-1.5 rounded-lg font-medium">
              1.8K viewers
            </div>
          </div>
          <div class="p-4">
            <h3 class="text-white font-semibold text-base mb-2">Competitive Gameplay</h3>
            <p class="text-gray-400 text-sm">Valorant • ValorantPro</p>
          </div>
        </div>
        
        <!-- Stream 3 - CS2 -->
        <div class="bg-dark-card rounded-2xl overflow-hidden border border-dark-border shadow-lg">
          <div class="h-28 bg-gradient-to-br from-orange-600 via-red-600 to-orange-700 relative">
            <div class="absolute top-3 left-3 bg-red-500 text-white text-sm px-3 py-1.5 rounded-lg font-bold">
              LIVE
            </div>
            <div class="absolute bottom-3 right-3 bg-black/60 backdrop-blur-sm text-white text-sm px-3 py-1.5 rounded-lg font-medium">
              3.2K viewers
            </div>
          </div>
          <div class="p-4">
            <h3 class="text-white font-semibold text-base mb-2">Pro Tournament Finals</h3>
            <p class="text-gray-400 text-sm">CS2 • ESLPro</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Premium Floating Elements -->
    <!-- New Stream Notification -->
    <div class="absolute -right-10 top-24 bg-gaming-green text-dark-bg px-5 py-3 rounded-2xl font-bold text-base shadow-2xl animate-pulse-gaming border-2 border-white/10 backdrop-blur-sm">
      New stream!
      <div class="absolute -bottom-1 left-1/2 transform -translate-x-1/2 w-3 h-3 bg-gaming-green rotate-45"></div>
    </div>
    
    <!-- Play Button -->
    <div class="absolute -left-10 bottom-40 w-16 h-16 bg-gaming-blue rounded-full flex items-center justify-center shadow-2xl animate-float border-3 border-white/20 backdrop-blur-sm">
      <svg class="w-7 h-7 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
        <path d="M8 5v14l11-7z"/>
      </svg>
    </div>
    
    <!-- Live Indicator -->
    <div class="absolute -left-8 top-48 bg-red-500 text-white px-4 py-2 rounded-full text-sm font-bold animate-pulse flex items-center shadow-xl backdrop-blur-sm border border-white/20">
      <div class="w-2.5 h-2.5 bg-white rounded-full mr-2 animate-pulse"></div>
      LIVE
    </div>
    
    <!-- Viewer Count -->
    <div class="absolute -right-6 bottom-20 bg-dark-card text-gaming-green px-4 py-2 rounded-xl text-sm font-bold shadow-xl border border-gaming-green/30 backdrop-blur-sm">
      8.1K
      <div class="text-xs text-gray-400">viewers</div>
    </div>
  </div>
</div>

<style>
  /* Enhanced animations for the premium mockup */
  @keyframes pulse-gaming {
    0%, 100% { 
      transform: scale(1);
      opacity: 0.95;
    }
    50% { 
      transform: scale(1.03);
      opacity: 1;
    }
  }
  
  @keyframes float {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg);
    }
    50% { 
      transform: translateY(-12px) rotate(1deg);
    }
  }
  
  .animate-pulse-gaming {
    animation: pulse-gaming 2.5s ease-in-out infinite;
  }
  
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
  
  /* Professional drop shadow with subtle gaming accent */
  .drop-shadow-\[0_35px_80px_rgba\(0\,0\,0\,0\.25\)\] {
    filter: drop-shadow(0 35px 80px rgba(0, 0, 0, 0.25)) drop-shadow(0 0 40px rgba(0, 255, 136, 0.08));
  }
</style>