---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-16">
  <!-- Animated background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-dark-bg via-dark-bg to-gaming-green/10"></div>
  
  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 50px 50px;"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left side - Text content -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          Discover Live
          <span class="text-gaming-green animate-pulse-gaming block">Esports Streams</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-8 max-w-2xl">
          Watch your favorite gamers live. Discover new streamers. Never miss the best esports content with real-time notifications and personalized recommendations.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#download" class="bg-gaming-green text-dark-bg px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gaming-green/90 transition-all transform hover:scale-105 animate-glow">
            Download Now
          </a>
          <a href="#preview" class="border border-gaming-green text-gaming-green px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gaming-green/10 transition-colors">
            Watch Preview
          </a>
        </div>
        
        <!-- Stats -->
        <div class="flex flex-wrap gap-8 mt-12 justify-center lg:justify-start">
          <div class="text-center">
            <div class="text-2xl font-bold text-gaming-green">10K+</div>
            <div class="text-gray-400">Active Streams</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-gaming-green">50K+</div>
            <div class="text-gray-400">Users</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-gaming-green">24/7</div>
            <div class="text-gray-400">Live Content</div>
          </div>
        </div>
      </div>
      
      <!-- Right side - Phone mockup -->
      <div class="flex justify-center lg:justify-end">
        <div class="relative animate-float">
          <!-- Phone frame -->
          <div class="w-72 h-[600px] bg-gray-900 rounded-[3rem] p-2 shadow-2xl shadow-gaming-green/20">
            <div class="w-full h-full bg-dark-bg rounded-[2.5rem] overflow-hidden relative">
              <!-- Status bar -->
              <div class="flex justify-between items-center px-6 py-3 text-white text-sm">
                <span>9:41</span>
                <div class="flex space-x-1">
                  <div class="w-4 h-2 bg-white rounded-sm"></div>
                  <div class="w-4 h-2 bg-white rounded-sm"></div>
                  <div class="w-6 h-2 bg-gaming-green rounded-sm"></div>
                </div>
              </div>
              
              <!-- App content -->
              <div class="px-4 pb-4 h-full">
                <!-- Search bar -->
                <div class="bg-dark-card rounded-lg p-3 mb-4">
                  <div class="flex items-center space-x-2 text-gray-400">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <span>Search streams...</span>
                  </div>
                </div>
                
                <!-- Stream cards -->
                <div class="space-y-3">
                  <!-- Live stream 1 -->
                  <div class="bg-dark-card rounded-lg overflow-hidden">
                    <div class="h-32 bg-gradient-to-r from-purple-600 to-blue-600 relative">
                      <div class="absolute top-2 left-2 bg-red-500 text-white text-xs px-2 py-1 rounded">
                        LIVE
                      </div>
                      <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
                        2.5K viewers
                      </div>
                    </div>
                    <div class="p-3">
                      <h3 class="text-white font-semibold text-sm mb-1">Ranked Climbing</h3>
                      <p class="text-gray-400 text-xs">League of Legends</p>
                    </div>
                  </div>
                  
                  <!-- Live stream 2 -->
                  <div class="bg-dark-card rounded-lg overflow-hidden">
                    <div class="h-32 bg-gradient-to-r from-green-600 to-teal-600 relative">
                      <div class="absolute top-2 left-2 bg-red-500 text-white text-xs px-2 py-1 rounded">
                        LIVE
                      </div>
                      <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
                        1.8K viewers
                      </div>
                    </div>
                    <div class="p-3">
                      <h3 class="text-white font-semibold text-sm mb-1">Pro Gameplay</h3>
                      <p class="text-gray-400 text-xs">Valorant</p>
                    </div>
                  </div>
                  
                  <!-- Live stream 3 -->
                  <div class="bg-dark-card rounded-lg overflow-hidden">
                    <div class="h-32 bg-gradient-to-r from-orange-600 to-red-600 relative">
                      <div class="absolute top-2 left-2 bg-red-500 text-white text-xs px-2 py-1 rounded">
                        LIVE
                      </div>
                      <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
                        3.2K viewers
                      </div>
                    </div>
                    <div class="p-3">
                      <h3 class="text-white font-semibold text-sm mb-1">Tournament</h3>
                      <p class="text-gray-400 text-xs">CS2</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 w-12 h-12 bg-gaming-green rounded-full flex items-center justify-center animate-bounce">
            <svg class="w-6 h-6 text-dark-bg" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
          
          <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-gaming-blue rounded-full flex items-center justify-center animate-pulse">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gaming-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>