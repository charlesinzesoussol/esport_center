---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="The future of esports streaming is coming soon. Join our early access list to be the first to discover the ultimate platform for live gaming content." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://esportsstream.app/" />
    <meta property="og:title" content="EsportsStream - Coming Soon" />
    <meta property="og:description" content="The future of esports streaming is coming soon. Join our early access list to be the first to discover the ultimate platform for live gaming content." />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://esportsstream.app/" />
    <meta property="twitter:title" content="EsportsStream - Coming Soon" />
    <meta property="twitter:description" content="The future of esports streaming is coming soon. Join our early access list to be the first to discover the ultimate platform for live gaming content." />
  </head>
  <body class="bg-dark-bg text-white font-gaming overflow-hidden">
    <main class="h-screen">
      <slot />
    </main>
  </body>
</html>