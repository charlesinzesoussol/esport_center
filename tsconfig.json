{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/layouts/*": ["./src/layouts/*"],
      "@/pages/*": ["./src/pages/*"]
    }
  },
  "include": [
    "src/**/*",
    "astro.config.mjs",
    "tailwind.config.mjs"
  ],
  "exclude": [
    "use-cases/**/*",
    "examples/**/*",
    "PRPs/**/*",
    "node_modules/**/*",
    "dist/**/*"
  ]
}